<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Alpha.EditText.Style" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/alpha_edittext_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">11dp</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="android:textSize">10pt</item>
    </style>
    
    <style name="TextAppearance.TextButton.Style" parent="@android:style/TextAppearance.Small">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">#e6e6e6</item>
        <item name="android:clickable">true</item>
    </style>

</resources>
